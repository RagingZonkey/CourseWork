<Window x:Class="WpfApp1.view.Client.Buy.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.view.Client.Buy" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d" Icon="/Assets/CLEANCUT_Нежелательный фон 2 2.png"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="Заказ" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="108*"/>
            <ColumnDefinition Width="577*"/>
            <ColumnDefinition Width="108*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="360*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="3" Margin="-10,10,10,-10" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="156.96"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <Border.Background>
                <LinearGradientBrush SpreadMethod="Reflect" StartPoint="0,0" EndPoint="1,1 ">
                    <GradientStop Color="#f5f7fa" Offset="0"></GradientStop>
                    <GradientStop Color="#a6c1ee" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <DockPanel Grid.Column="1" Grid.Row="1" LastChildFill="False">
            <TextBlock DockPanel.Dock="Top" Margin="0,13,0,0" HorizontalAlignment="Center" FontSize="28"
                           Text="Зарезервировать" 
                           ></TextBlock>
            <TextBlock DockPanel.Dock="Top" 
                       Margin="0,5,0,0" 
                       HorizontalAlignment="Center" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Foreground="DarkRed"
                       Text="Внимание! Время работы парикмахерской: Ежедневно 8:00-20:00" 
                           ></TextBlock>

            <TextBlock DockPanel.Dock="Top" Margin="0,5,0,0"
                           Text="Наименование услуги" 
                           ></TextBlock>

            <ComboBox x:Name="gender_code" 
                      ItemsSource="{Binding Services}"
                      SelectedItem="{Binding SelectedService}"
                      DockPanel.Dock="Top" 
                      FontFamily="Helvetica" 
                      FontWeight="Light" 
                      FontSize="20"
                          Opacity="0.6">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}" FontSize="9"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            


            
            
            

            <TextBlock DockPanel.Dock="Top" Margin="0,13,0,0"
                           Text="Выберите дату" 
                           HorizontalAlignment="Center"></TextBlock>
            <StackPanel DockPanel.Dock="Top"
                HorizontalAlignment="Center">
                <Calendar 
                                 SelectedDate="{Binding Date_Box, Mode=TwoWay}"
                            Margin="0,8,0,0">

                </Calendar>
                <TextBlock Text="Выберите время"
                           HorizontalAlignment="Center"/>
                <xctk:MaskedTextBox Text="{Binding SelectedTime}"
                                    HorizontalAlignment="Center"
                                Mask="00:00" />
            </StackPanel>
            <DockPanel Width="900" Height="120" Margin="0, -70,0 , 0">
                <Button  
                         
                         Margin="300,0,0,0"
                         Width="129" Height="40"
                         Content="Зарезервировать" Command="{Binding OrderService}" Background="Transparent"/>
                <Button  DockPanel.Dock="Top" Height="40" Width="129" 
                         Content="Назад" Command="{Binding Back}" Background="Transparent" Margin="15,40,300,0"/>
                <TextBlock FontWeight="Bold"
                       Foreground="DarkRed"
                           FontSize="16"
                    DockPanel.Dock="Bottom" Margin="-450,20,0,0"
                           Text="В списке ниже отображены услуги, а также дата и время, запись на которые уже осуществлялась!" 
                           HorizontalAlignment="Center"></TextBlock>
            </DockPanel>
            

        </DockPanel>
        
        <ScrollViewer Name="scroll" CanContentScroll="True"  Grid.Column="1"
                      Grid.Row="2" >

            <DockPanel Grid.Column="1" Grid.Row="1"  >
                <ListBox x:Name="recordlist" 
                         ItemsSource="{Binding OrderedServices}"
                         
                         DockPanel.Dock="Top" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>

                            <Border BorderBrush="#b2b6c2" BorderThickness="2" Width="700">

                                <DockPanel>
                                    <Image DockPanel.Dock="Left" Width="83"  Source="{Binding Path=MainImagePath}"/>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock  Margin="10 0 0 0" Text="{Binding Path=Title}"></TextBlock>
                                        
                                        <TextBlock  Margin="10 0 0 0" Text="Продолжительность:      "></TextBlock>
                                        <TextBlock  Margin="10 0 0 0" Text="Дата резервации:      "></TextBlock>
                                        
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock  Text=" "></TextBlock>
                                        
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock  Text="{Binding Path=DurationInMinutes}"></TextBlock>
                                            <TextBlock  Text=" мин"></TextBlock>
                                        </StackPanel>
                                        <TextBlock  Text="{Binding Path=DayReserv}"></TextBlock>
                                        
                                    </StackPanel>

                                </DockPanel>
                            </Border>

                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>

            </DockPanel>

        </ScrollViewer>

    </Grid>
</Window>
